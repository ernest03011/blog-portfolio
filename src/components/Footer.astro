---
import { Icon } from "astro-icon/components";
const today = new Date();
import { SocialLinks } from "@data/social-links";
import { Site } from "@data/site";
import { Image } from "astro:assets";

import builtWithAstroImage from "@assets/images/built-with-astro.webp";
import friendsOfHoustonGif from "@assets/gif/friends-of-houston.gif";
---

<footer class="border-divider border-t-1 border-solid">
  <p class="text-primary">
    &copy; {today.getFullYear()}
    {Site.author.name}. All rights reserved.
  </p>
  <div class="social-links text-accent">
    {
      SocialLinks.map((socialLink) => {
        return (
          <a href={socialLink.href} target="_blank">
            <span class="sr-only">{socialLink.srMessage}</span>
            <Icon name={socialLink.iconName} size={32} />
          </a>
        );
      })
    }
  </div>
  <!-- Astro Webring badges -->
  <div class="mt-2 flex justify-center items-center gap-2">
    <a href="https://astro-webrings.lou.gg/next?site=manuel.djs&ring=built-with-astro">
      <Image src={builtWithAstroImage} alt="Built with Astro" width="88" height="31" />
    </a>
    <a href="https://astro-webrings.lou.gg/next?site=manuel.djs&ring=friends-of-houston">
      <Image src={friendsOfHoustonGif} alt="Friends of Houston" width="88" height="31" />
    </a>
  </div>
</footer>
<style>
  footer {
    padding: 2rem 1rem;
    text-align: center;
  }
  .social-links {
    display: flex;
    justify-content: center;
    gap: 0.1rem;
    margin-top: 1em;
  }
  .social-links a {
    padding: 0.5rem 0.1em;
    text-decoration: none;
  }
</style>
